{% extends 'base.html.twig' %}

{% block title %}{{ 'title.task_overview'|trans }}{% endblock %}

{% block body %}
    <div class="">
        <table class="table table-borderless table-responsive table-striped table-hover">
            <thead>
            <tr>
                <th style="max-width: 100px">{{ 'overview.id'|trans }}</th>
                <th>{{ 'overview.display'|trans }}</th>
                <th>{{ 'overview.deadline'|trans }}</th>
                <th>{{ 'overview.concentration_level_required'|trans }}</th>
                <th class="text-end" style="width: 150px">{{ 'overview.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% block records %}
            {% endblock %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block buttons %}
    <a href="{{ path('task.edit') }}">
        <button class="btn btn-primary">{{ 'button.new'|trans }}</button>
    </a>
{% endblock %}