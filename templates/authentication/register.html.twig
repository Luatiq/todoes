{% extends 'base.html.twig' %}

{% block title %}{{ 'title.register'|trans }}{% endblock %}

{% block body %}
    <div class="mx-auto" style="max-width: 500px;">
        {{ form_start(form) }}
        {{ form_row(form.display) }}
        {{ form_row(form.email) }}
        {{ form_row(form.plainPassword) }}

        <button type="submit" title="{{ 'button.register'|trans }}" class="btn mt-2 btn-primary">{{ 'button.register'|trans }}</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
