{% extends 'base.html.twig' %}

{% block title %}{{ 'title.login'|trans }}{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="mx-auto" style="max-width: 500px;">
        <span class="small">First time? <a href="{{ path('auth.register') }}" title="Register">Sign up!</a></span>
        <br>

        <label class="mt-4" for="inputEmail">{{ 'Email'|trans }}</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
        <label class="mt-2" for="inputPassword">{{ 'Password'|trans }}</label>
        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
        #}

        <button type="submit" class="visually-hidden" id="submitButton"></button>
    </div>
</form>

{# Todo ugly but does the job, we'll improve /login later? #}
<style>
    .container {
        max-width: 500px !important;
    }
</style>
{% endblock %}

{% block buttons %}
    <button type="button" class="btn mt-2 btn-primary" onclick="document.getElementById('submitButton').click()"
    >{{ 'button.sign_in'|trans }}</button>
{% endblock %}
